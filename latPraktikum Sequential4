package Praktikum;

import java.util.Scanner;

public class No4 {

    public static void main(String[] args) {
        Scanner vto = new Scanner(System.in);
        String mencari;
        System.out.println("Masukkan Sesuatu : ");
        mencari = vto.nextLine();
        int a = 0;
        for (int i = 0; i < args.length; i++) {
            if (mencari.charAt(i) == 'i') {
                a++;
            }
        }
        System.out.println("Jumlah huruf i pada kalimat : " + a);
    }
}
